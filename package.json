{
  "name": "crm-chat-box",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist",
    "build": "rimraf dist && cross-env NODE_OPTIONS=--max_old_space_size=4096 vite build",
    "start:prod": "vite preview --port 3005",
    "start": "pm2 start npm --name crm-chat-box -- run start:prod",
    "restart": "fuser -k 3005/tcp || true && pm2 stop crm-chat-box || true && pm2 delete crm-chat-box || true && npm run clean && pm2 flush && npm run build && pm2 start npm --name crm-chat-box -- run start:prod",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.1.1",
    "@mui/x-tree-view": "^8.5.1",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.7",
    "@tanstack/react-query": "^5.76.1",
    "@vitejs/plugin-react": "^4.4.1",
    "antd": "^5.25.2",
    "axios": "^1.9.0",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "emoji-picker-react": "^4.12.2",
    "file-saver": "^2.0.5",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "otp-input-react": "^0.3.0",
    "react": "^18.3.1",
    "react-color": "^2.19.3",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.26.2",
    "react-toastify": "^11.0.5",
    "relative-time": "^1.0.0",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.7",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/file-saver": "^2.0.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.15.19",
    "@types/react": "^19.1.2",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.crm.chatbox",
    "productName": "CRM Chatbox",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
